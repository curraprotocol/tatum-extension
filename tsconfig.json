{
  "compilerOptions": {
    "skipLibCheck": true,
    "moduleResolution": "node",
    "removeComments": false,
    "sourceMap": true,
    "target": "es2020",
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "module": "esnext",
    "noEmitOnError": true,
    "lib": ["es2020"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@curra/api": ["../api/dist"]
    }
  },
  "include": ["src"]
}
